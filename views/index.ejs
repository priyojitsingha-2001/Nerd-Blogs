<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %> <!-- including the head section using ejs -->

    <body>
        <%- include('./partials/nav.ejs') %> <!-- including the nav bar using ejs -->
            <div class="blogs content">
                <h2>All Blogs</h2>
                <% if (blogs.length>0) { %>
                    <% blogs.forEach(blog=>{%>
                        <h3 class="title">
                            <%= blog.title %>
                        </h3>
                        <p class="snippet">
                            <%= blog.snippet %>
                        </p>
                        <%}) %>
                            <% } else { %>
                                <p>There are no Blogs to display</p>
                                <% } %>
            </div>
            <%- include('./partials/footer.ejs') %>
    </body>

</html>